//atividade 2 da prova
#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>
int main(){
    setlocale (LC_ALL,"");

    float km, lt;

printf("coloque a distância percorrida: ");
scanf("%f", &km);

printf("coloque a quantidade de litros gastos: ");
scanf("%f", &lt);
    float gasto = (km / lt);

printf("A média de km por litro é de: %.1f litros por km rodado \n", gasto);
system ("pause");
    return 0;
}
